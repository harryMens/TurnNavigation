<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:id="@+id/container"
        android:layout_margin="10dp"
        android:alpha="0.8"
        android:elevation="10dp"
        android:background="@drawable/layout_bg"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#737c7d"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:id="@+id/instructions"
            />


    </RelativeLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/category_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bottom_layout"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        tools:context=".MainActivity"
        />

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:progressTint="#5ab7b9"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_background"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/hand_btn"
        />
    <LinearLayout
        android:elevation="200dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/bottom_layout"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <ImageView
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/speaker_on"
            android:background="@drawable/speaker_on"
            android:visibility="visible"
            />
        <ImageView
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/speaker_off"
            android:id="@+id/speaker_off"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#464945"
                android:id="@+id/sub_local"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/write"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/sub_local"
                android:id="@+id/time_taken"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/write"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/sub_local"
                android:layout_toEndOf="@+id/time_taken"
                android:id="@+id/distance_taken"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:elevation="500dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/scooter"
                    android:id="@+id/nav_mode"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>